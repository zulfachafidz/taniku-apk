#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import StoryCreator components.story_creator.StoryCreator
#:import BottomNav components.bottom_nav.BottomNav

<HomePage>:
    md_bg_color: get_color_from_hex("#FFFFFF")

    MDBoxLayout:
        orientation: 'vertical'

        # Appbar
        AppBar:

        MDBoxLayout:
            
            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline

                        # Stories
                        ScrollView:
                            size_hint_y: None
                            height: 110
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                spacing: 5
                                padding: 5

                                # Story Creator
                                StoryCreator:
                                    avatar: root.profile_picture
                                
                                MDBoxLayout:
                                    adaptive_width: True
                                    padding: 5
                                    spacing: 5
                                    id: stories
                        
                        MDSeparator:

        # Bottom Navigation Bar
        BottomNav:
            avatar: root.profile_picture
